{
    "manifest_version": 3,
    "name": "My AI Assistant",
    "version": "1.0",
    "permissions": [
      "activeTab",
      "storage",
      "contextMenus",
      "windows",
      "sidePanel",
      "tabs"
    ],
    "side_panel": {
        "default_path": "index.html"
    },
    "background": {
      "service_worker": "background.js"
    },
    "host_permissions": [
        "<all_urls>"
    ],
    "action": {
      "default_title": "Open Sidebar",
      "default_popup": "index.html"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"],
        "css": ["toolbar.css"]
      }
    ]
  }
  